@{
}
@model Emprunts

<h1>Ajouter un emprunt</h1>

<form asp-action="Ajouter" method="post">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Usager</label>
        <select asp-for="IDUsager" asp-items="ViewBag.Usagers"><option value="">Sélectionner l'usager</option></select>
        <span asp-validation-for="IDUsager" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label>Livre</label>
        <select asp-for="IDLivre" asp-items="ViewBag.Livres"><option value="">Sélectionner le livre</option></select>
        <span asp-validation-for="IDLivre" class="text-danger"></span>
    </div> 
    <div class="form-group mb-3">
        <label asp-for="DateDebut">Date de début</label>
        <input asp-for="DateDebut" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DateDebut" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateRetourPrevue">Date retour prévue</label>
        <input asp-for="DateRetourPrevue" class="form-control" type="date"/>
        <span asp-validation-for="DateRetourPrevue" class="text-danger"></span>
    </div>


    <div>
        <a href="@Url.Action("Index", "Emprunts")" class="btn btn-secondary">Annuler</a>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    </div>
</form>


@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}